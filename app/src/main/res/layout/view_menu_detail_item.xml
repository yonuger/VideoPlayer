<?xml version="1.0" encoding="utf-8"?>
<com.homework.group.videoplayer.ui.menu.detail.VideoMenuDetailItemView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/gray"
            android:id="@+id/tv_menu_detail_item_number"
            android:text="1"/>

        <ImageView
            android:layout_toRightOf="@+id/tv_menu_detail_item_number"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="#cccccc"
            android:id="@+id/iv_menu_detail_item_show" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignTop="@+id/iv_menu_detail_item_show"
            android:layout_toRightOf="@+id/iv_menu_detail_item_show"
            android:layout_toEndOf="@+id/iv_menu_detail_item_show"
            android:layout_alignBottom="@+id/iv_menu_detail_item_show"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="12dp">

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="大主宰"
                android:singleLine="true"
                android:id="@+id/tv_menu_detail_item_title"
                android:textSize="16sp"
                android:textColor="@color/font_black"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2016-04-06 12:30:00"
                android:layout_alignParentBottom="true"
                android:id="@+id/tv_menu_detail_item_desc"
                android:textColor="@color/gray"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:textSize="13sp"/>

        </RelativeLayout>

    </RelativeLayout>
</com.homework.group.videoplayer.ui.menu.detail.VideoMenuDetailItemView>
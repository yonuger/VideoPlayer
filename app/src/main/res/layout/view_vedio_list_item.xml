<?xml version="1.0" encoding="utf-8"?>
<com.homework.group.videoplayer.ui.home.VideoListItemView xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="12dp"
                android:layout_marginBottom="6dp"
                android:background="#cccccc"
                android:id="@+id/iv_vedio_list_item_show" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/iv_vedio_list_item_show"
                android:layout_toRightOf="@+id/iv_vedio_list_item_show"
                android:layout_toEndOf="@+id/iv_vedio_list_item_show"
                android:layout_alignBottom="@+id/iv_vedio_list_item_show"
                android:layout_marginLeft="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="大主宰"
                    android:id="@+id/tv_vedio_list_item_title"
                    android:textSize="16sp"
                    android:textColor="@color/font_black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="大主宰"
                    android:layout_below="@+id/tv_vedio_list_item_title"
                    android:id="@+id/tv_vedio_list_item_desc"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2016-04-06 12:30:00"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/tv_vedio_list_item_time"
                    android:textSize="13sp"/>

            </RelativeLayout>
    </RelativeLayout>

</com.homework.group.videoplayer.ui.home.VideoListItemView>